                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '✅ Appuntamento Annullato',
                        text: 'L\'appuntamento è stato annullato con successo',
                        confirmButtonColor: '#10b981',
                        timer: 3000,
                        timerProgressBar: true
                    }).then(() => {
