                    });
                } else {
                    Swal.fire('Errore', data.message || 'Errore durante l\'annullamento', 'error');
                }
            })
            .catch(error => {
                console.error('Errore:', error);
                Swal.fire('Errore', 'Errore di rete durante l\'annullamento', 'error');
            });
        }
    });
