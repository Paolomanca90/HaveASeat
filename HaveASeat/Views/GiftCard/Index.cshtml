<!-- Saloni Popolari -->
@if (popularSalons.Any())
{
    <section class="py-16 bg-white dark:bg-gray-800/80">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4 dark:text-white">Saloni più richiesti</h2>
                    <p class="text-xl text-gray-600 dark:text-gray-300">Crea un buono specifico per il tuo salone preferito</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:@(popularSalons.Count() <= 4 ? "grid-cols-3" : "grid-cols-4") gap-6">
                    @foreach (var salon in popularSalons.Take(8))
                    {
                        <div class="salon-card flex flex-col h-full">
                            <!-- Immagine del salone -->
                            <div class="relative h-48 overflow-hidden">
                                @if (!string.IsNullOrEmpty(salon.CoverImageUrl))
                                {
                                    <img src="@salon.CoverImageUrl"
                                         alt="@salon.Nome"
                                         class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                                }
                                else
                                {
                                    <div class="w-full h-full bg-gradient-to-br from-purple-400 via-pink-500 to-red-500
                                                                flex items-center justify-center group-hover:scale-105 transition-transform duration-300">
                                        <i class="fas fa-store text-6xl text-white/80"></i>
                                    </div>
                                }

                                <!-- Badge premium -->
                                @if (salon.IsPremium)
                                {
                                    <div class="absolute top-3 left-3 bg-gradient-to-r from-yellow-400 to-yellow-500
                                                                text-gray-800 px-2 py-1 rounded-full text-xs font-bold uppercase shadow-lg">
                                        PREMIUM
                                    </div>
                                }
                            </div>

                            <!-- Contenuto della card -->
                            <div class="flex flex-col flex-grow p-4">
                                <!-- Header con nome e rating -->
                                <div class="flex justify-between items-start mb-3">
                                    <div class="flex-grow">
                                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1
                                                           group-hover:text-purple-600 transition-colors">
                                            @salon.Nome
                                        </h3>
                                        <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                                            <i class="fas fa-map-marker-alt mr-1"></i>
                                            @salon.Citta
                                        </div>
                                    </div>
                                </div>


                                <!-- Footer con prezzo e bottone -->
                                <div class="flex gap-2">
                                    <a href="/GiftCard/Create?saloneId=@salon.SaloneId&amount=50"
                                       class="flex-1 text-xs bg-purple-600 text-white px-3 py-2 rounded-lg hover:bg-purple-700 transition-colors text-center">
                                        €50
                                    </a>
                                    <a href="/GiftCard/Create?saloneId=@salon.SaloneId&amount=100"
                                       class="flex-1 text-xs bg-purple-600 text-white px-3 py-2 rounded-lg hover:bg-purple-700 transition-colors text-center">
                                        €100
                                    </a>
                                    <a href="/GiftCard/Create?saloneId=@salon.SaloneId"
                                       class="flex-1 text-xs border border-purple-600 text-purple-600 px-3 py-2 rounded-lg hover:bg-purple-600 hover:text-white transition-colors text-center">
                                        Custom
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}

<!-- Sezione Riscatta Buono -->
<section id="redeem" class="py-16 bg-gray-50 dark:bg-gray-800/50">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 dark:text-white">Riscatta il tuo buono regalo</h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
                Hai ricevuto un buono regalo? Inserisci il codice per iniziare a prenotare
            </p>

            <div class="max-w-md mx-auto">
                <form id="redeemForm" class="space-y-4">
                    @Html.AntiForgeryToken()
                    <div class="relative">
                        <input type="text"
                               id="redeemCode"
                               placeholder="Inserisci il codice (es. XXXX-XXXX-XXXX)"
                               maxlength="14"
                               class="w-full text-center text-lg font-mono tracking-wider border-2 border-gray-300 dark:border-gray-600
                                      rounded-lg px-4 py-4 uppercase dark:bg-gray-700 dark:text-white
                                      focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all">
                    </div>

                    <button type="submit"
                            class="w-full bg-purple-600 hover:bg-purple-700 text-white py-4 px-6 rounded-lg font-semibold
                                   transition-all duration-300 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-check mr-2"></i>
                        Verifica Buono
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

