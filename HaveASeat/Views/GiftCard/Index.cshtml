@section Scripts {
    <script>
        $(document).ready(function() {

            // Form riscatto buono
            $('#redeemForm').submit(function(e) {
                e.preventDefault();
                const code = $('#redeemCode').val().trim();

                if (!code) {
                    showAlert('Inserisci un codice valido', 'error');
                    return;
                }

                const token = $('input[name="__RequestVerificationToken"]').val();

                if (!token) {
                    showAlert('Errore di sicurezza. Ricarica la pagina.', 'error');
                    return;
                }

                $.ajax({
                    url: '/GiftCard/Redeem',
                    type: 'POST',
                    data: {
                        code: code,
                        __RequestVerificationToken: token
                    },
                    success: function(response) {
                        if (response.success) {
                            showAlert('Buono valido! Reindirizzamento in corso...', 'success');
                            setTimeout(() => {
                                window.location.href = response.redirectUrl;
                            }, 2000);
                        } else {
                            showAlert(response.message, 'error');
                        }
                    },
                    error: function() {
                        showAlert('Errore durante la verifica. Riprova.', 'error');
                    }
                });
            });

            // Formattazione automatica codice
            $('#redeemCode').on('input', function() {
                let value = $(this).val().replace(/[^A-Z0-9]/g, '');
                if (value.length > 4) {
                    value = value.substring(0, 4) + '-' + value.substring(4);
                }
                if (value.length > 9) {
                    value = value.substring(0, 9) + '-' + value.substring(9);
                }
                $(this).val(value);
            });

            // FAQ toggle
            $('.faq-question').click(function() {
                const answer = $(this).siblings('.faq-answer');
                const icon = $(this).find('i');

                if (answer.hasClass('hidden')) {
                    answer.removeClass('hidden').slideDown();
                    icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                } else {
                    answer.slideUp().addClass('hidden');
                    icon.removeClass('fa-chevron-up').addClass('fa-chevron-down');
                }
            });

            function updatePreview() {
                $('#previewAmount').text('€' + selectedAmount);

                const isGeneric = $('input[name="giftCardType"]:checked').val() === 'generic';
                if (isGeneric) {
                    $('#previewSalon').text('Valido in tutti i saloni partner');
                } else {
                    $('#previewSalon').text('Salone specifico selezionato');
                }
            }

            function showAlert(message, type) {
                const alertClass = type === 'success' ? 'bg-green-100 text-green-800 border-green-200' : 'bg-red-100 text-red-800 border-red-200';
                const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle';

                const alert = $(`
                    <div class="fixed top-4 right-4 z-50 ${alertClass} border rounded-lg p-4 shadow-lg max-w-sm">
                        <div class="flex items-center">
                            <i class="fas ${icon} mr-2"></i>
                            <span>${message}</span>
                        </div>
                    </div>
                `);

                $('body').append(alert);

                setTimeout(() => {
                    alert.fadeOut(() => alert.remove());
                }, 5000);
            }

            // Smooth scroll per i link anchor
            $('a[href^="#"]').click(function(e) {
                e.preventDefault();
                const target = $($(this).attr('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 100
                    }, 800);
                }
            });
        });
    </script>
}