@{
    ViewData["Title"] = "Buoni Regalo";
    var popularSalons = ViewBag.PopularSalons as IEnumerable<dynamic> ?? new List<dynamic>();
}

@section Styles {
<style>
        .gift-card-preview {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 16px;
            position: relative;
            overflow: hidden;
        }

            .gift-card-preview::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
                opacity: 0.3;
            }
    .hero-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    }

</style>
<link href="~/css/Clienti.css" rel="stylesheet" />
}

<!-- Hero Section -->
<section class="hero-gradient text-white py-16 md:py-24 relative overflow-hidden">
    <!-- Elementi fluttuanti decorativi -->
    <div class="absolute inset-0 pointer-events-none">
        <div class="floating-element absolute top-20 left-10 w-16 h-16 bg-white/10 rounded-full"></div>
        <div class="floating-element absolute top-40 right-20 w-12 h-12 bg-white/15 rounded-lg rotate-45"></div>
        <div class="floating-element absolute bottom-32 left-1/4 w-8 h-8 bg-white/20 rounded-full"></div>
        <div class="floating-element absolute bottom-20 right-1/4 w-20 h-20 bg-white/5 rounded-full"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Contenuto testuale -->
                <div class="text-center lg:text-left">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                        Il regalo perfetto per
                        <span class="bg-gradient-to-r from-yellow-300 to-orange-300 bg-clip-text text-transparent">
                            ogni occasione
                        </span>
                    </h1>
                    <p class="text-xl md:text-2xl mb-8 text-white/90 leading-relaxed">
                        Regala momenti di bellezza e benessere con i buoni regalo HaveASeat.
                        Validi in tutti i saloni partner.
                    </p>

                    <div class="flex flex-col sm:flex-row gap-4 mb-8">
                        <a href="/GiftCard/Create"
                           class="bg-white text-purple-600 px-8 py-4 rounded-full font-semibold
                                  hover:bg-gray-100 transition-all duration-300 transform hover:scale-105
                                  shadow-lg">
                            <i class="fas fa-gift mr-2"></i>
                            Crea Buono Regalo
                        </a>
                        <a href="#redeem"
                           class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold
                                  hover:bg-white hover:text-purple-600 transition-all duration-300">
                            <i class="fas fa-ticket-alt mr-2"></i>
                            Riscatta Buono
                        </a>
                    </div>

                    <!-- Statistiche -->
                    <div class="grid grid-cols-3 gap-4 mt-12">
                        <div class="text-center">
                            <div class="text-2xl font-bold mb-1">10K+</div>
                            <div class="text-sm text-white/80">Saloni Partner</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold mb-1">50K+</div>
                            <div class="text-sm text-white/80">Buoni Venduti</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold mb-1">98%</div>
                            <div class="text-sm text-white/80">Soddisfazione</div>
                        </div>
                    </div>
                </div>

                <!-- Anteprima Gift Card -->
                <div class="flex justify-center lg:justify-end">
                    <div class="gift-card-preview w-80 h-48 p-6 text-white relative z-10">
                        <div class="flex justify-between items-start mb-4 relative z-10">
                            <div class="text-sm font-medium opacity-90">BUONO REGALO</div>
                            <div class="text-right">
                                <div class="text-2xl font-bold">€50</div>
                                <div class="text-xs opacity-75">HAVEASEAT</div>
                            </div>
                        </div>

                        <div class="absolute bottom-0 left-6 right-6 relative z-10">
                            <div class="text-xs opacity-75 mb-1">Valido fino al</div>
                            <div class="text-sm font-medium">@DateTime.Now.AddYears(1).ToString("dd/MM/yyyy")</div>
                            <div class="mt-3 text-xs font-mono tracking-wider">
                                XXXX-XXXX-XXXX
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Come funziona -->
