                    <i class="fas fa-euro-sign text-green-600 dark:text-green-400"></i>
                </div>
            </div>
            <p class="text-sm mt-2 @(Model.Stats.IsIncassoPositive ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                <i class="fas fa-arrow-@(Model.Stats.IsIncassoPositive ? "up" : "down") mr-1"></i>
                <span id="percIncasso">@Math.Abs(Model.Stats.PercentualeIncasso)%</span> rispetto a ieri
