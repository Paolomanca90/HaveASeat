    <!-- JavaScript for tabs and interactions -->
    <script defer>
        function changeSalon(saloneId) {
            window.location.href = `/Partner/Personalizza?id=${saloneId}`;
        }

        function switchTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.style.display = 'none';
            });
            
            // Show selected tab
            document.getElementById(tabName + '-tab').style.display = 'block';
            
            // Update tab buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('border-purple-500', 'text-purple-600', 'dark:text-purple-400');
                btn.classList.add('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300', 'dark:text-gray-400', 'dark:hover:text-gray-300');
            });
            
            const activeBtn = document.querySelector(`[data-tab="${tabName}"]`);
            activeBtn.classList.remove('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300', 'dark:text-gray-400', 'dark:hover:text-gray-300');
            activeBtn.classList.add('border-purple-500', 'text-purple-600', 'dark:text-purple-400');
        }

        function previewSalon() {
            window.open('/Salon/Preview/@Model.SaloneId', '_blank');
        }

        function saveCustomization() {
            // Simulate save
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 flex items-center space-x-2';
            notification.innerHTML = '<i class="fas fa-check"></i><span>Personalizzazione salvata con successo!</span>';
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Theme selection
        document.querySelectorAll('.theme-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.theme-option').forEach(opt => {
                    opt.classList.remove('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/20');
                    opt.classList.add('border-transparent', 'bg-white', 'dark:bg-gray-700');
                    opt.querySelector('.fas.fa-check')?.remove();
                });
                
                this.classList.remove('border-transparent', 'bg-white', 'dark:bg-gray-700');
                this.classList.add('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/20');
                
                const checkIcon = document.createElement('i');
                checkIcon.className = 'fas fa-check text-purple-600';
                this.querySelector('.flex.items-center.justify-between').appendChild(checkIcon);
            });
        });

        // Layout selection
        document.querySelectorAll('.layout-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.layout-option').forEach(opt => {
                    opt.classList.remove('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/20');
                    opt.classList.add('border-transparent', 'bg-white', 'dark:bg-gray-700');
                    opt.querySelector('.fas.fa-check')?.remove();
                });
                
                this.classList.remove('border-transparent', 'bg-white', 'dark:bg-gray-700');
                this.classList.add('border-purple-500', 'bg-purple-50', 'dark:bg-purple-900/20');
                
                const checkIcon = document.createElement('i');
                checkIcon.className = 'fas fa-check text-purple-600';
                this.querySelector('.flex.items-center').appendChild(checkIcon);
            });
        });

        // Color picker updates
        document.querySelectorAll('input[type="color"]').forEach(input => {
            input.addEventListener('change', function() {
                const textInput = this.parentElement.querySelector('input[type="text"]');
                if (textInput) {
                    textInput.value = this.value;
                }
                updateColorPreview();
            });
        });

        document.querySelectorAll('input[type="text"][value^="#"]').forEach(input => {
            input.addEventListener('input', function() {
                const colorInput = this.parentElement.previousElementSibling;
                if (colorInput && colorInput.type === 'color' && /^#[0-9A-F]{6}$/i.test(this.value)) {
                    colorInput.value = this.value;
                    updateColorPreview();
                }
            });
        });

        function updateColorPreview() {
            const primary = document.querySelector('input[type="color"]').value;
            const secondary = document.querySelectorAll('input[type="color"]')[1].value;
            const accent = document.querySelectorAll('input[type="color"]')[2].value;
            
            // Update preview card colors
            const previewHeader = document.querySelector('#colors-tab .bg-gradient-to-r');
            if (previewHeader) {
                previewHeader.style.background = `linear-gradient(to right, ${primary}, ${secondary})`;
            }
            
            const previewButton = document.querySelector('#colors-tab .bg-orange-500');
            if (previewButton) {
                previewButton.style.backgroundColor = accent;
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Set initial active tab
            switchTab('photos');
            
            // Update color preview
            updateColorPreview();
        });
    </script>
