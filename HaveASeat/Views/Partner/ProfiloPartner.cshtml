<div class="container">
    <!-- Header Profilo -->
    <div class="profile-header dark:bg-gray-800/80">
        <div class="profile-avatar">
            <div class="avatar-container">
                <img src="/img/avatarYTrasp.jpg" alt="Avatar" class="avatar">
                <button class="avatar-edit" onclick="editAvatar()">✏️</button>
            </div>
            <div class="profile-info">
                <span class="inline-flex items-center rounded-md bg-purple-50 px-1 py-1 text-xs font-medium text-purple-700 ring-1 ring-purple-700/10 ring-inset">@TempData["AbbonamentoNome"]</span>
                <h1 id="userName">@Model.Nome @Model.Cognome</h1>
                <p class="dark:text-neutral-300"><span class="info-label dark:text-neutral-50">Username:</span> @Model.Email</p>
               @*  <p>📱 @Model.PhoneNumber</p>
                <p>📍 @Model.Città, @Model.Provincia @Model.CAP</p> *@
