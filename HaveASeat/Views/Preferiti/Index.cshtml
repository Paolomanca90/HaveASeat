@model List<HaveASeat.Models.Preferito>

@{
    ViewData["Title"] = "I Miei Preferiti";
}

<!-- Header -->
<div class="bg-gradient-to-r from-pink-600 to-red-600 text-white py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl font-bold mb-4"><i class="fas fa-heart mr-3"></i>I Miei Preferiti</h1>
            <p class="text-xl opacity-90">I saloni che hai salvato</p>
        </div>
    </div>
</div>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">

        @if (!Model.Any())
        {
            <div class="text-center py-16">
                <div class="w-32 h-32 mx-auto mb-8 bg-gradient-to-br from-pink-100 to-red-100 rounded-full flex items-center justify-center">
                    <i class="far fa-heart text-6xl text-gray-400"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Nessun preferito</h2>
                <p class="text-gray-600 dark:text-gray-400 mb-8">Non hai ancora salvato nessun salone. Esplora e aggiungi i tuoi preferiti!</p>
                <a href="/Search" class="inline-flex items-center px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white rounded-lg font-medium transition-colors">
                    <i class="fas fa-search mr-2"></i>
                    Esplora Saloni
                </a>
            </div>
        }
        else
        {
            <div class="mb-6">
                <p class="text-gray-600 dark:text-gray-400">@Model.Count salone/i salvati</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var preferito in Model)
                {
                    var salone = preferito.Salone;
                    var coverImage = salone.Immagini?.FirstOrDefault(i => i.IsCover)?.Percorso
                                    ?? salone.Immagini?.FirstOrDefault()?.Percorso
                                    ?? "/img/placeholder.jpg";
                    var mediaVoti = salone.Recensioni?.Any() == true
                        ? salone.Recensioni.Average(r => r.Voto) : 0;
                    var numRecensioni = salone.Recensioni?.Count ?? 0;
                    var categorie = salone.SaloneCategorie?.Select(sc => sc.Categoria?.Nome).Where(n => n != null);

                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg transition-shadow" id="preferito-@salone.SaloneId">
                        <!-- Immagine -->
                        <div class="relative h-48">
                            <img src="@coverImage" alt="@salone.Nome" class="w-full h-full object-cover">
                            <button onclick="removePreferito('@salone.SaloneId')"
                                    class="absolute top-3 right-3 w-10 h-10 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center shadow-md hover:bg-red-50 transition-colors">
                                <i class="fas fa-heart text-red-500 text-lg"></i>
                            </button>
                            @if (salone.SalonePersonalizzazione?.LogoUrl != null)
                            {
                                <div class="absolute bottom-3 left-3">
                                    <img src="@salone.SalonePersonalizzazione.LogoUrl" alt="Logo" class="w-12 h-12 rounded-lg bg-white p-1 shadow-md">
                                </div>
                            }
                        </div>

                        <!-- Info -->
                        <div class="p-5">
                            <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-1">@salone.Nome</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">
                                <i class="fas fa-map-marker-alt mr-1"></i>
                                @salone.Indirizzo, @salone.Citta
                            </p>

                            @if (mediaVoti > 0)
                            {
                                <div class="flex items-center mb-3">
                                    <div class="flex text-yellow-400 text-sm mr-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="@(i <= Math.Round(mediaVoti) ? "fas" : "far") fa-star"></i>
                                        }
                                    </div>
                                    <span class="text-sm text-gray-600 dark:text-gray-400">@mediaVoti.ToString("F1") (@numRecensioni)</span>
                                </div>
                            }

                            @if (categorie?.Any() == true)
                            {
                                <div class="flex flex-wrap gap-1 mb-4">
                                    @foreach (var cat in categorie.Take(3))
                                    {
                                        <span class="px-2 py-1 bg-pink-100 dark:bg-pink-900/30 text-pink-700 dark:text-pink-300 text-xs rounded-full">@cat</span>
                                    }
                                </div>
                            }

                            <div class="flex space-x-2">
                                <a href="/Search/Details/@salone.SaloneId"
                                   class="flex-1 text-center bg-pink-600 hover:bg-pink-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                    <i class="fas fa-calendar-check mr-1"></i> Prenota
                                </a>
                                <a href="tel:@salone.Telefono"
                                   class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg text-sm transition-colors">
                                    <i class="fas fa-phone"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        async function removePreferito(saloneId) {
            const result = await Swal.fire({
                title: 'Rimuovere dai preferiti?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Rimuovi',
                cancelButtonText: 'Annulla'
            });

            if (!result.isConfirmed) return;

            try {
                const response = await fetch('/Preferiti/Toggle', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ saloneId: saloneId })
                });
                const data = await response.json();

                if (data.success) {
                    const card = document.getElementById(`preferito-${saloneId}`);
                    if (card) {
                        card.style.transition = 'opacity 0.3s, transform 0.3s';
                        card.style.opacity = '0';
                        card.style.transform = 'scale(0.9)';
                        setTimeout(() => card.remove(), 300);
                    }

                    // Se non ci sono piÃ¹ preferiti, ricarica per mostrare empty state
                    setTimeout(() => {
                        if (document.querySelectorAll('[id^="preferito-"]').length === 0) {
                            location.reload();
                        }
                    }, 400);
                }
            } catch (e) {
                Swal.fire('Errore', 'Impossibile rimuovere il preferito', 'error');
            }
        }
    </script>
}
