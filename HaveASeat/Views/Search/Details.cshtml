        // NUOVA FUNZIONE: Blocca temporaneamente uno slot (reservation)
        async function reserveSlot(slotId, slotTime, oraInizio, oraFine) {
            console.log('Reserving slot:', { slotId, slotTime, oraInizio, oraFine });

            // Se c'è già una reservation attiva, rilasciala prima
            if (bookingState.reservationId) {
                await releaseCurrentReservation();
            }

            // Mostra indicatore di caricamento
            const slotButton = document.querySelector(`[data-slot-id="${slotId}"]`);
            if (slotButton) {
                slotButton.innerHTML = `<i class="fas fa-spinner fa-spin"></i>`;
                slotButton.disabled = true;
            }

            // Prepara i dati per la reservation
            const reserveData = {
                saloneId: bookingState.saloneId,
                data: bookingState.selectedDate,
                oraInizio: oraInizio,
                oraFine: oraFine,
                dipendenteId: bookingState.dipendenteId,
                servizioId: bookingState.servizioId
            };

            console.log('Sending reserve request:', reserveData);

            try {
                const response = await fetch('/Search/ReserveSlot', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(reserveData)
                });

                const result = await response.json();
                console.log('Reserve response:', result);

                if (result.success) {
                    // Salva i dati della reservation
                    bookingState.reservationId = result.reservationId;
                    bookingState.reservationExpiresAt = result.expiresAt;
                    bookingState.selectedTimeSlot = slotId;
                    bookingState.slotTime = slotTime;
                    bookingState.oraInizio = oraInizio;
                    bookingState.oraFine = oraFine;

                    // Avvia il countdown
                    startCountdown(result.remainingSeconds);

                    // Evidenzia lo slot selezionato
                    highlightSelectedSlot(slotId);

                    // Aggiorna UI
                    updateSummary();
                    updateContinueButton();

                    console.log('Slot reserved successfully. ID:', result.reservationId);
                } else {
                    // Gestisci errore
                    handleReservationError(result);
                    // Ricarica gli slot per mostrare lo stato aggiornato
                    loadAvailableSlots();
                }
            } catch (error) {
                console.error('Error reserving slot:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Errore di rete',
                    text: 'Impossibile riservare lo slot. Riprova.',
                    confirmButtonColor: '#ef4444'
                });
                loadAvailableSlots();
            }
        }

