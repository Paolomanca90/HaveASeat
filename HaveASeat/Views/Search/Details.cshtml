@section Scripts {
    <script>
        // === Preferiti ===
        async function checkPreferito(saloneId) {
            try {
                const response = await fetch(`/Preferiti/Check?saloneId=${saloneId}`);
                const data = await response.json();
                updatePreferitoIcon(data.isFavorite);
            } catch (e) { }
        }

        async function togglePreferito(saloneId) {
            try {
                const response = await fetch('/Preferiti/Toggle', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ saloneId: saloneId })
                });
                const data = await response.json();
                if (data.success) {
                    updatePreferitoIcon(data.isFavorite);
                    const icon = document.getElementById('iconPreferito');
                    icon.classList.add('animate-bounce');
                    setTimeout(() => icon.classList.remove('animate-bounce'), 500);
                }
            } catch (e) { console.error('Errore toggle preferito:', e); }
        }

        function updatePreferitoIcon(isFavorite) {
            const icon = document.getElementById('iconPreferito');
            if (!icon) return;
            if (isFavorite) {
                icon.className = 'fas fa-heart text-red-500';
            } else {
                icon.className = 'far fa-heart text-white';
            }
        }

        // Verifica stato preferito al caricamento
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('btnPreferito');
            if (btn) checkPreferito('@Model.Salone.SaloneId');
        });

        // Stato della prenotazione con supporto per reservation
        let bookingState = {
            currentStep: 1,
            saloneId: '@Model.Salone.SaloneId',
            servizioId: null,
            serviceName: '',
            servicePrice: 0,
            serviceDuration: 0,
            dipendenteId: null,
            staffName: '',
            selectedDate: '',
            selectedTimeSlot: null,
            slotTime: '',
            showStaffSelection: @Model.MostraSceltaDipendente.ToString().ToLower(),
            maxSteps: '@Model.MostraSceltaDipendente' == 'True' ? 4 : 3,
            // Nuovi campi per il sistema di reservation
            reservationId: null,
            reservationExpiresAt: null,
            sessionId: null,
            oraInizio: null,
            oraFine: null
        };

        // Variabili per il countdown
        let countdownInterval = null;
        const RESERVATION_MINUTES = 10;

        // Inizializzazione
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Booking widget initialized with state:', bookingState);

            // Imposta data minima a domani
            const dateInput = document.getElementById('bookingDate');
            if (dateInput) {
                const tomorrow = new Date();
                tomorrow.setDate(tomorrow.getDate() + 1);
                dateInput.min = tomorrow.toISOString().split('T')[0];
                dateInput.value = tomorrow.toISOString().split('T')[0];
            }

            // Event listeners per dati cliente
            const customerInputs = ['customerName', 'customerSurname', 'customerEmail', 'customerPhone'];
            customerInputs.forEach(inputId => {
                const input = document.getElementById(inputId);
                if (input) {
                    input.addEventListener('input', updateContinueButton);
                }
            });

            // IMPORTANTE: Inizializza lo stepper al caricamento
            updateStepIndicator();
        });

        // FUNZIONE CORRETTA per aggiornare gli indicatori di step
        function updateStepIndicator() {
            console.log('Updating step indicator. Current step:', bookingState.currentStep);

            // Aggiorna la barra di progresso
            updateProgressBar();

            // Calcola quanti step sono stati completati
            const totalSteps = bookingState.maxSteps;

            for (let i = 1; i <= totalSteps; i++) {
                const stepCircle = document.getElementById(`step-circle-${i}`);
                const stepLabel = document.getElementById(`step-label-${i}`);

                if (!stepCircle || !stepLabel) {
                    console.warn(`Step elements not found for step ${i}`);
                    continue;
                }

                // Reset delle classi CSS
                stepCircle.classList.remove(
                    'bg-purple-600', 'text-white', 'border-purple-600',
                    'bg-green-500', 'border-green-500', 'shadow-lg'
                );
                stepCircle.classList.add(
                    'bg-gray-200', 'dark:bg-gray-700', 'text-gray-500',
                    'dark:text-gray-400', 'border-gray-200', 'dark:border-gray-700'
                );

                stepLabel.classList.remove(
                    'text-purple-600', 'dark:text-purple-400',
                    'text-green-600', 'dark:text-green-400'
                );
                stepLabel.classList.add('text-gray-500', 'dark:text-gray-400');

                // Applica lo stato corretto
                if (i < bookingState.currentStep) {
                    // Step completato (verde)
                    stepCircle.classList.remove(
                        'bg-gray-200', 'dark:bg-gray-700', 'text-gray-500',
                        'dark:text-gray-400', 'border-gray-200', 'dark:border-gray-700'
                    );
                    stepCircle.classList.add('bg-green-500', 'text-white', 'border-green-500', 'shadow-lg');

                    stepLabel.classList.remove('text-gray-500', 'dark:text-gray-400');
                    stepLabel.classList.add('text-green-600', 'dark:text-green-400');

                } else if (i === bookingState.currentStep) {
                    // Step attivo (viola)
                    stepCircle.classList.remove(
                        'bg-gray-200', 'dark:bg-gray-700', 'text-gray-500',
                        'dark:text-gray-400', 'border-gray-200', 'dark:border-gray-700'
                    );
                    stepCircle.classList.add('bg-purple-600', 'text-white', 'border-purple-600', 'shadow-lg');

                    stepLabel.classList.remove('text-gray-500', 'dark:text-gray-400');
                    stepLabel.classList.add('text-purple-600', 'dark:text-purple-400');
                }
            }
        }

        // NUOVA FUNZIONE per aggiornare la barra di progresso
        function updateProgressBar() {
            const progressBar = document.getElementById('progress-bar');
            if (!progressBar) {
                console.warn('Progress bar element not found');
                return;
            }

            const totalSteps = bookingState.maxSteps;
            const currentStep = bookingState.currentStep;

            // Calcola la percentuale di completamento
            const progressPercentage = ((currentStep - 1) / (totalSteps - 1)) * 100;

            console.log('Progress update:', { currentStep, totalSteps, progressPercentage });

            // Applica la larghezza con animazione
            progressBar.style.width = `${Math.max(0, Math.min(100, progressPercentage))}%`;
        }

