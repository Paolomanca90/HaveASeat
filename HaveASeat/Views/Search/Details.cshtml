        // === GESTIONE COUNTDOWN ===

        function startCountdown(seconds) {
            console.log('Starting countdown:', seconds, 'seconds');

            // Ferma eventuali countdown precedenti
            stopCountdown();

            // Mostra il container del countdown
            const countdownContainer = document.getElementById('reservationCountdown');
            if (countdownContainer) {
                countdownContainer.classList.remove('hidden');
            }

            let remainingSeconds = seconds;
            const totalSeconds = RESERVATION_MINUTES * 60;

            // Aggiorna subito
            updateCountdownDisplay(remainingSeconds, totalSeconds);

            // Avvia intervallo
            countdownInterval = setInterval(() => {
                remainingSeconds--;

                if (remainingSeconds <= 0) {
                    // Tempo scaduto!
                    handleReservationExpired();
                } else {
                    updateCountdownDisplay(remainingSeconds, totalSeconds);

                    // Avviso quando rimane poco tempo (ultimo minuto)
                    if (remainingSeconds === 60) {
                        showLowTimeWarning();
                    }
                }
            }, 1000);
        }

        function stopCountdown() {
            if (countdownInterval) {
                clearInterval(countdownInterval);
                countdownInterval = null;
            }

            // Nascondi il container
            const countdownContainer = document.getElementById('reservationCountdown');
            if (countdownContainer) {
                countdownContainer.classList.add('hidden');
            }
        }

        function updateCountdownDisplay(seconds, totalSeconds) {
            const minutes = Math.floor(seconds / 60);
            const secs = seconds % 60;
            const timeString = `${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;

            const timerElement = document.getElementById('countdownTimer');
            const progressElement = document.getElementById('countdownProgress');

            if (timerElement) {
                timerElement.textContent = timeString;

                // Cambia colore quando rimane poco tempo
                if (seconds <= 60) {
                    timerElement.classList.add('text-red-600', 'countdown-warning');
                    timerElement.classList.remove('text-amber-600');
                }
            }

            if (progressElement) {
                const percentage = (seconds / totalSeconds) * 100;
                progressElement.style.width = `${percentage}%`;

                // Cambia colore della barra
                if (seconds <= 60) {
                    progressElement.classList.remove('bg-amber-500');
                    progressElement.classList.add('bg-red-500');
                }
            }
        }

