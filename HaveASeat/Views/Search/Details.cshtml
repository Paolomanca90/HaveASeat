                            {
                                <a href="@Model.Salone.SalonePersonalizzazione.FacebookUrl" target="_blank"
                                   class="w-10 h-10 bg-salon-primary rounded-lg flex items-center justify-center text-white hover:bg-salon-secondary transition-colors">
