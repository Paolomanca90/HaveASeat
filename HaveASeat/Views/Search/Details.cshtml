        // FUNZIONI CORRETTE per la navigazione tra i passi
        function nextStep() {
            if (!canProceed()) {
                console.log('Cannot proceed to next step. Current state:', bookingState);
                return;
            }

            console.log('Moving from step', bookingState.currentStep);

            // Nascondi step corrente
            const currentStepElement = document.getElementById(`booking-step-${bookingState.currentStep}`);
            if (currentStepElement) {
                currentStepElement.classList.remove('active');
                currentStepElement.classList.add('hidden');
            }

            // Vai al prossimo step
            bookingState.currentStep++;

            // NON saltare: se non c'è selezione dipendente, lo step 2 è direttamente la data/ora
            // (non è il dipendente che non esiste nel DOM)

            console.log('Moving to step', bookingState.currentStep);

            // Mostra nuovo step
            const nextStepElement = document.getElementById(`booking-step-${bookingState.currentStep}`);
            if (nextStepElement) {
                nextStepElement.classList.remove('hidden');
                nextStepElement.classList.add('active', 'fade-in');
            }

            // IMPORTANTE: Aggiorna lo stepper DOPO aver cambiato lo step
            updateStepIndicator();
            updateContinueButton();

            // Se siamo nello step data/ora, carica gli slot per la data preimpostata
            const dateTimeStep = bookingState.showStaffSelection ? 3 : 2;
            if (bookingState.currentStep === dateTimeStep) {
                const dateInput = document.getElementById('bookingDate');
                if (dateInput && dateInput.value) {
                    loadAvailableSlots();
                }
            }

            // Auto-scroll
            setTimeout(() => {
                document.querySelector('#bookingFlow')?.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }, 100);
        }

        async function prevStep() {
