<!-- Modal Promozione Multipla -->
<div id="bulkPromotionModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="sticky top-0 bg-white dark:bg-gray-800 p-6 border-b border-gray-200 dark:border-gray-700 rounded-t-xl">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 rounded-lg flex items-center justify-center">
                        <i class="fas fa-fire text-white text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">🔥 Promozione Multipla</h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Attiva promozioni per più servizi contemporaneamente</p>
                    </div>
                </div>
                <button type="button" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" onclick="closeBulkPromotionModal()">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <div class="p-6">
            <form id="bulkPromotionForm">
                @Html.AntiForgeryToken()
                <input type="hidden" id="bulkSaloneId" value="">

                <div class="space-y-6">
                    <!-- Selezione Servizi -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">
                            <i class="fas fa-check-circle mr-2 text-orange-500"></i>
                            Seleziona Servizi da Promuovere
                        </label>
                        <div class="bg-gray-50 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-3">
                                <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Servizi disponibili:</span>
                                <div class="flex space-x-2">
                                    <button type="button" onclick="selectAllServices()" class="text-xs px-3 py-1 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">
                                        Seleziona Tutti
                                    </button>
                                    <button type="button" onclick="deselectAllServices()" class="text-xs px-3 py-1 bg-gray-600 text-white rounded-full hover:bg-gray-700 transition-colors">
                                        Deseleziona Tutti
                                    </button>
                                </div>
                            </div>
                            <div id="servicesContainer" class="max-h-64 overflow-y-auto space-y-2">
                                <!-- I servizi verranno inseriti dinamicamente qui -->
                            </div>
                        </div>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                            <i class="fas fa-info-circle mr-1"></i>
                            Seleziona i servizi su cui applicare la promozione. Solo i servizi senza promozione attiva sono disponibili.
                        </p>
                    </div>

                    <!-- Configurazione Promozione -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="bulkPercentualeSconto" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <i class="fas fa-percentage mr-2 text-green-500"></i>
                                Percentuale di Sconto (%)
                            </label>
                            <div class="relative">
                                <input type="number"
                                       id="bulkPercentualeSconto"
                                       min="1"
                                       max="99"
                                       value="20"
                                       class="w-full px-4 py-3 pr-12 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
                                       oninput="updatePreviewPrices()">
                                <span class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500">%</span>
                            </div>
                            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                Sconto da applicare a tutti i servizi selezionati
                            </div>
                        </div>

                        <div>
                            <label for="bulkDataFinePromo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                <i class="fas fa-calendar-alt mr-2 text-blue-500"></i>
                                Data Fine Promozione
                            </label>
                            <input type="date"
                                   id="bulkDataFinePromo"
                                   min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")"
                                   value="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")"
                                   class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100">
                            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                La promozione si attiverà immediatamente
                            </div>
                        </div>
                    </div>

                    <!-- Anteprima Risparmio -->
                    <div id="savingsPreview" class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4 hidden">
                        <div class="flex items-center mb-3">
                            <i class="fas fa-calculator text-green-600 dark:text-green-400 mr-2"></i>
                            <span class="font-semibold text-green-800 dark:text-green-200">Anteprima Risparmi</span>
                        </div>
                        <div id="savingsContent" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Contenuto dinamico -->
                        </div>
                    </div>

                    <!-- Riassunto Selezione -->
                    <div id="selectionSummary" class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 hidden">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <i class="fas fa-info-circle text-blue-600 dark:text-blue-400 mr-2"></i>
                                <span class="font-medium text-blue-800 dark:text-blue-200">
                                    <span id="selectedCount">0</span> servizi selezionati
                                </span>
                            </div>
                            <div class="text-sm text-blue-700 dark:text-blue-300">
                                Risparmio totale: <span id="totalSavings" class="font-bold">€0.00</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer con Azioni -->
                <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3 mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <button type="button"
                            onclick="closeBulkPromotionModal()"
                            class="flex-1 px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <i class="fas fa-times mr-2"></i>
                        Annulla
                    </button>
                    <button type="button"
                            onclick="submitBulkPromotion()"
                            id="submitBulkBtn"
                            class="flex-1 px-6 py-3 bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700 text-white rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                        <i class="fas fa-fire mr-2"></i>
                        <span id="submitBtnText">Attiva Promozioni</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Variabili globali per il modal
    let availableServices = [];
    let selectedServices = [];

    // Funzioni per gestire la selezione servizi
    function selectAllServices() {
        const checkboxes = document.querySelectorAll('#servicesContainer input[type="checkbox"]');
        checkboxes.forEach(cb => {
            cb.checked = true;
        });
        updateSelectedServices();
    }

    function deselectAllServices() {
        const checkboxes = document.querySelectorAll('#servicesContainer input[type="checkbox"]');
        checkboxes.forEach(cb => {
            cb.checked = false;
        });
        updateSelectedServices();
    }

    function updateSelectedServices() {
        const checkboxes = document.querySelectorAll('#servicesContainer input[type="checkbox"]:checked');
        selectedServices = Array.from(checkboxes).map(cb => cb.value);

        document.getElementById('selectedCount').textContent = selectedServices.length;

        // Mostra/nascondi i pannelli informativi
        const summaryPanel = document.getElementById('selectionSummary');
        const submitBtn = document.getElementById('submitBulkBtn');

        if (selectedServices.length > 0) {
            summaryPanel.classList.remove('hidden');
            submitBtn.disabled = false;
            updatePreviewPrices();
        } else {
            summaryPanel.classList.add('hidden');
            document.getElementById('savingsPreview').classList.add('hidden');
            submitBtn.disabled = true;
        }
    }

    function updatePreviewPrices() {
        const percentuale = parseFloat(document.getElementById('bulkPercentualeSconto').value) || 0;
        const previewContainer = document.getElementById('savingsPreview');
        const savingsContent = document.getElementById('savingsContent');

        if (selectedServices.length === 0 || percentuale === 0) {
            previewContainer.classList.add('hidden');
            return;
        }

        let totalSavings = 0;
        let previewHtml = '';

        selectedServices.forEach(serviceId => {
            const service = availableServices.find(s => s.servizioId === serviceId);
            if (service) {
                const discountAmount = service.prezzo * (percentuale / 100);
                const newPrice = service.prezzo - discountAmount;
                totalSavings += discountAmount;

                previewHtml += `
                    <div class="bg-white dark:bg-gray-800 p-3 rounded-lg border border-green-200 dark:border-green-700">
                        <div class="font-medium text-gray-900 dark:text-gray-100 text-sm">${service.nome}</div>
                        <div class="flex items-center justify-between mt-1">
                            <span class="text-xs text-gray-500 line-through">€${service.prezzo.toFixed(2)}</span>
                            <span class="text-sm font-bold text-green-600 dark:text-green-400">€${newPrice.toFixed(2)}</span>
                        </div>
                        <div class="text-xs text-green-700 dark:text-green-300">Risparmio: €${discountAmount.toFixed(2)}</div>
                    </div>
                `;
            }
        });

        savingsContent.innerHTML = previewHtml;
        document.getElementById('totalSavings').textContent = `€${totalSavings.toFixed(2)}`;
        previewContainer.classList.remove('hidden');
    }

    // Funzione per popolare i servizi nel modal
    function populateServices(services) {
        availableServices = services;
        const container = document.getElementById('servicesContainer');

        if (services.length === 0) {
            container.innerHTML = `
                <div class="text-center py-6 text-gray-500 dark:text-gray-400">
                    <i class="fas fa-exclamation-circle text-2xl mb-2"></i>
                    <p>Nessun servizio disponibile per le promozioni</p>
                    <p class="text-xs">Tutti i servizi hanno già una promozione attiva</p>
                </div>
            `;
            return;
        }

        let servicesHtml = '';
        services.forEach(service => {
            servicesHtml += `
                <label class="flex items-center space-x-3 p-3 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer transition-colors">
                    <input type="checkbox"
                           name="serviziIds"
                           value="${service.servizioId}"
                           class="rounded text-orange-600 focus:ring-orange-500"
                           onchange="updateSelectedServices()">
                    <div class="flex-1 min-w-0">
                        <div class="font-medium text-gray-900 dark:text-gray-100">${service.nome}</div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500 dark:text-gray-400">€${service.prezzo.toFixed(2)} • ${service.durata} min</span>
                            <span class="text-xs text-blue-600 dark:text-blue-400">${service.staffCount || 0} staff</span>
                        </div>
                    </div>
                </label>
            `;
        });

        container.innerHTML = servicesHtml;
    }

    // Funzioni principali del modal
    function openBulkPromotionModal(saloneId, services) {
        document.getElementById('bulkSaloneId').value = saloneId;
        populateServices(services);
        document.getElementById('bulkPromotionModal').classList.remove('hidden');

        // Reset form
        selectedServices = [];
        document.getElementById('selectionSummary').classList.add('hidden');
        document.getElementById('savingsPreview').classList.add('hidden');
        document.getElementById('submitBulkBtn').disabled = true;
    }

    function closeBulkPromotionModal() {
        document.getElementById('bulkPromotionModal').classList.add('hidden');
        selectedServices = [];
        availableServices = [];
    }

    function submitBulkPromotion() {
        const saloneId = document.getElementById('bulkSaloneId').value;
        const percentualeSconto = document.getElementById('bulkPercentualeSconto').value;
        const dataFine = document.getElementById('bulkDataFinePromo').value;

        if (selectedServices.length === 0) {
            Swal.fire('Errore', 'Seleziona almeno un servizio', 'error');
            return;
        }

        if (!percentualeSconto || percentualeSconto < 1 || percentualeSconto > 99) {
            Swal.fire('Errore', 'Inserisci una percentuale di sconto valida (1-99%)', 'error');
            return;
        }

        if (!dataFine || new Date(dataFine) <= new Date()) {
            Swal.fire('Errore', 'Seleziona una data di fine promozione futura', 'error');
            return;
        }

        // Mostra loading
        const submitBtn = document.getElementById('submitBulkBtn');
        const originalText = document.getElementById('submitBtnText').innerHTML;

        submitBtn.disabled = true;
        document.getElementById('submitBtnText').innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Attivazione in corso...';

        // Prepara i dati
        const requestData = {
            saloneId: saloneId,
            serviziIds: selectedServices,
            percentualeSconto: parseFloat(percentualeSconto),
            dataFine: dataFine
        };

        // Invia la richiesta
        fetch('/Promotions/BulkActivate', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify(requestData)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                closeBulkPromotionModal();
                Swal.fire({
                    icon: 'success',
                    title: '🔥 Promozioni Attivate!',
                    html: `
                        <div class="text-center">
                            <p class="mb-3">${data.message}</p>
                            <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-3">
                                <div class="text-sm text-green-800 dark:text-green-200">
                                    <strong>${data.promozioniAttivate || selectedServices.length}</strong> servizi ora in promozione!
                                </div>
                            </div>
                        </div>
                    `,
                    confirmButtonColor: '#ea580c',
                    confirmButtonText: 'Perfetto!'
                }).then(() => {
                    location.reload();
                });
            } else {
                Swal.fire('Errore', data.message, 'error');
            }
        })
        .catch(error => {
            console.error('Errore:', error);
            Swal.fire('Errore', 'Si è verificato un errore di rete', 'error');
        })
        .finally(() => {
            // Ripristina il bottone
            submitBtn.disabled = false;
            document.getElementById('submitBtnText').innerHTML = originalText;
        });
    }

    // Event listeners per chiusura modal
    document.addEventListener('DOMContentLoaded', function() {
        // Click outside modal to close
        document.getElementById('bulkPromotionModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeBulkPromotionModal();
            }
        });

        // ESC key to close modal
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && !document.getElementById('bulkPromotionModal').classList.contains('hidden')) {
                closeBulkPromotionModal();
            }
        });
    });
</script>